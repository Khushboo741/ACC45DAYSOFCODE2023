#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    int N;
	    int X;
	    int Y;
	    int count=0;
	    cin>>N>>X>>Y;
	    if((Y<X )&& Y!=0){
	        cout<<"NO"<<endl;
	    }
	    else if(Y==X || Y==0){
	        cout<<"YES"<<endl;
	    }
	    else if((N*X>=Y) && (Y%X==0)){
	        cout<<"YES"<<endl;
	    }
	    else{
	        cout<<"NO"<<endl;
	    }
	}
	return 0;
}
