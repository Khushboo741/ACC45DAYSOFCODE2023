#include <iostream>
using namespace std;

int main() {
	int T;
	cin>>T;
	while(T--){
	    int N, count=0;
	    cin>>N;
	    int a[N], b[N];
	    for(int i=0;i<N;i++){
	        cin>>a[i];
	    }
	    for(int i=0;i<N;i++){
	        cin>>b[i];
	    }
	    
	    for(int i=0;i<N;i++){
	        if(i==0){
	            if(a[i] >= b[i]){
	                count++;
	            }
	                
	        }
	        else{
	      if(abs(a[i]-a[i-1]) >= b[i]){
	           count++;
	       }
	        }
	    }
	    cout<<count<<endl;
	}
	return 0;
}
