#include <iostream>
using namespace std;

int main() {
     int t;
     cin>>t;
     while(t--){
         int N;
         cin>>N;
         int M;
         cin>>M;
         if(N<M){
             cout<<N<<endl;
         }
         else if(M==0){
             cout<<(2*N)<<endl;
         }
         else{
             cout<<((N-M)+N)<<endl;
         }
     }
	return 0;
}
